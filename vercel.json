{
  "version": 2,
  
  "builds": [
    {
      "src": "package.json", 
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build:frontend", 
        "outputDirectory": "dist" 
      }
    },
    {
      "src": "server/server.ts",
      "use": "@vercel/node@2.0.0" 
    }
  ],
  
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/server.ts"
    },
    {
      "src": "/.*",
      "dest": "/index.html"
    }
  ]
}