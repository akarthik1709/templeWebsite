{
  "version": 2,
  "files": [
    "src/**",
    "server/**",
    "test/**",
    "public/**",
    "dist/**",
    "package.json",
    "package-lock.json"
  ],
  "builds": [
    {
      "src": "server/server.ts",
      "use": "@vercel/node@2.0.0" 
    }
  ],
  
  "routes": [
    {
      "src": "/([^/\\.]+\\.[^/]+)$",
      "dest": "/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "server/server.ts"
    },
    {
      "src": "/.*",
      "dest": "./dist/index.html"
    }
  ]
}