// tsconfig.node.json
{
  "extends": "./tsconfig.json", // Good practice to inherit baseline settings
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    
    "target": "ES2022",
    "outDir": "server-dist", // Matches your "build:backend" script
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "." // Include files from the root context
  },
  "include": ["server/**/*.ts"], 
  "exclude": ["node_modules", "dist", "src"] 
}