{
  "extends": "./tsconfig.json", 
  "compilerOptions": {
    "composite": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true, // Often needed for React modules
    "types": ["node"]
  },
  "include": ["src/**/*"]
}